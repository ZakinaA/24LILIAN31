{% extends 'base.html.twig' %}

{% block content %}
<link rel="stylesheet" href="{{ asset('style-cours.css') }}">
<style>
body, h1, h2, p, ul, li, a, img {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Arial', sans-serif;
    background-color: #121212;
    color: #ffffff;
    margin: 0;
    padding: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
}

.ajouter-cours-title-primary {
    font-size: 36px;
    font-weight: bold;
    text-align: center;
    color: #4CAF50; 
    margin-bottom: 20px;
}

.ajouter-cours-formulaire-ajout {
    background-color: #181B22;
    border-radius: 20px;
    padding: 20px;
    width: 800px;
    display: flex;
    gap: 40px;
    align-items: flex-start;
}

.ajouter-cours-left-column,
.ajouter-cours-right-column {
    flex: 1;
}

.ajouter-cours-image-container {
    width: 100%;
    height: 200px;
    border: 2px solid #444;
    border-radius: 10px;
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #232323;
    margin-bottom: 15px;
}

.ajouter-cours-image-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.ajouter-cours-form-group {
    margin-bottom: 15px;
}

.ajouter-cours-form-group label {
    display: block;
    margin-bottom: 10px;
    font-weight: bold;
    color: #ccc;
}

.ajouter-cours-form-group input,
.ajouter-cours-form-group select,
.ajouter-cours-form-group textarea {
    width: 100%;
    padding: 10px;
    border-radius: 5px;
    border: 1px solid #444;
    background-color: #232323;
    color: white;
}

.ajouter-cours-form-group input:focus,
.ajouter-cours-form-group select:focus,
.ajouter-cours-form-group textarea:focus {
    border-color: #4CAF50;
    outline: none;
    box-shadow: 0 0 8px #4CAF50;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
}

#ajouter-cours-progress-container {
    width: 100%;
    background-color: #ddd;
    border-radius: 20px;
    margin-top: 20px;
    height: 10px;
    overflow: hidden;
}

#ajouter-cours-progress-bar {
    width: 0%;
    height: 100%;
    background-color: #4CAF50;
    transition: width 0.3s ease;
}
</style>

<div class="ajouter-cours-form-container">
    <h1 class="ajouter-cours-title-primary">Modification d'un Cours</h1>
    <div class="ajouter-cours-formulaire-ajout">
        <div class="ajouter-cours-left-column">
            {{ form_start(form) }}

            <div class="ajouter-cours-form-group">
                {{ form_label(form.libelle) }}
                {{ form_widget(form.libelle) }}
            </div>

            <div class="ajouter-cours-form-group">
                {{ form_label(form.ageMini) }}
                {{ form_widget(form.ageMini) }}
            </div>

            <div class="ajouter-cours-form-group">
                {{ form_label(form.heureDebut) }}
                {{ form_widget(form.heureDebut) }}
            </div>

            <div class="ajouter-cours-form-group">
                {{ form_label(form.heureFin) }}
                {{ form_widget(form.heureFin) }}
            </div>

            <div class="ajouter-cours-form-group">
                {{ form_label(form.jour) }}
                {{ form_widget(form.jour) }}
            </div>

            <div class="ajouter-cours-form-group">
                {{ form_label(form.typeCours) }}
                {{ form_widget(form.typeCours) }}
            </div>
        </div>

        <div class="ajouter-cours-right-column">
            <div class="ajouter-cours-form-group">
                {{ form_label(form.typeInstrument) }}
                {{ form_widget(form.typeInstrument) }}
            </div>

            <div class="ajouter-cours-form-group">
                {{ form_label(form.professeur) }}
                {{ form_widget(form.professeur) }}
            </div>

            <div class="ajouter-cours-form-group">
                {{ form_widget(form.enregistrer) }}
            </div>
        </div>

        {{ form_end(form) }}
    </div>

    <div id="ajouter-cours-progress-container">
        <div id="ajouter-cours-progress-bar"></div>
    </div>
</div>

<script>
const fields = document.querySelectorAll('.ajouter-cours-form-group input, .ajouter-cours-form-group select, .ajouter-cours-form-group textarea');
const progressBar = document.getElementById('ajouter-cours-progress-bar');
fields.forEach(field => {
    field.addEventListener('input', updateProgress);
});

function updateProgress() {
    const filledFields = Array.from(fields).filter(field => field.value.trim() !== '');
    const progress = (filledFields.length / fields.length) * 100;
    progressBar.style.width = `${progress}%`;
}
</script>



{% endblock %}
