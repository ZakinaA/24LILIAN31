{% extends 'base.html.twig' %}

{% block title %}Inscription - Emusic{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .register-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: calc(100vh - 100px);
            padding: 2rem 1rem;
        }

        .register-card {
            background-color: var(--card-bg);
            border-radius: var(--border-radius-lg);
            width: 100%;
            max-width: 800px;
            overflow: hidden;
            box-shadow: var(--shadow-lg);
            border: 1px solid var(--border-light);
        }

        .register-header {
            padding: 1.5rem 2rem;
            border-bottom: 1px solid var(--border-light);
            text-align: center;
        }

        .register-title {
            font-size: 1.8rem;
            font-weight: 600;
            color: var(--primary-color);
            margin: 0;
        }

        .register-subtitle {
            color: var(--text-muted);
            margin-top: 0.5rem;
            font-size: 0.95rem;
        }

        .register-form {
            padding: 2rem;
        }

        .form-columns {
            display: flex;
            flex-wrap: wrap;
            gap: 2rem;
        }

        .form-column {
            flex: 1;
            min-width: 280px;
        }

        .form-section {
            margin-bottom: 1.5rem;
            padding-bottom: 1.5rem;
            border-bottom: 1px solid var(--border-light);
        }

        .form-section-title {
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 1rem;
            color: var(--text-light);
            display: flex;
            align-items: center;
        }

        .form-section-title i {
            margin-right: 0.5rem;
            color: var(--primary-color);
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 500;
            color: var(--text-light);
        }

        .form-control {
            width: 100%;
            padding: 0.8rem 1rem;
            background-color: var(--input-bg);
            border: 1px solid var(--border-light);
            border-radius: var(--border-radius);
            color: var(--text-light);
            transition: var(--transition);
        }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px var(--primary-transparent);
            outline: none;
        }

        .form-check {
            display: flex;
            align-items: center;
            margin-bottom: 1rem;
        }

        .form-check input[type="checkbox"] {
            margin-right: 0.5rem;
        }

        .form-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 2rem;
        }

        .btn-register {
            background-color: var(--primary-color);
            color: white;
            border: none;
            border-radius: var(--border-radius);
            padding: 0.8rem 1.5rem;
            font-weight: 600;
            cursor: pointer;
            transition: var(--transition);
            display: inline-flex;
            align-items: center;
        }

        .btn-register:hover {
            background-color: var(--primary-dark);
            box-shadow: var(--glow-primary);
            transform: translateY(-2px);
        }

        .btn-register i {
            margin-right: 0.5rem;
        }

        .btn-outline {
            background-color: transparent;
            color: var(--text-light);
            border: 1px solid var(--border-light);
            border-radius: var(--border-radius);
            padding: 0.8rem 1.5rem;
            font-weight: 500;
            cursor: pointer;
            transition: var(--transition);
        }

        .btn-outline:hover {
            background-color: rgba(255, 255, 255, 0.05);
        }

        .invalid-feedback {
            display: block;
            color: #e74c3c;
            font-size: 0.85rem;
            margin-top: 0.25rem;
        }

        .form-group.has-error .form-control {
            border-color: #e74c3c;
        }

        .form-helper {
            display: block;
            color: var(--text-muted);
            font-size: 0.85rem;
            margin-top: 0.5rem;
        }

        .image-preview-container {
            width: 150px;
            height: 150px;
            overflow: hidden;
            border-radius: var(--border-radius);
            background-color: var(--input-bg);
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 1px solid var(--border-light);
        }

        .image-preview {
            max-width: 100%;
            max-height: 100%;
            object-fit: cover;
        }

        @media (max-width: 768px) {
            .register-card {
                max-width: 100%;
            }
            
            .form-columns {
                flex-direction: column;
                gap: 0;
            }
            
            .register-form {
                padding: 1.5rem;
            }
        }
    </style>
{% endblock %}

{% block content %}
    <div class="register-container">
        <div class="register-card">
            <div class="register-header">
                <h1 class="register-title">Créez votre compte Emusic</h1>
                <p class="register-subtitle">Rejoignez notre communauté musicale</p>
            </div>
            
            <div class="register-form">
                {{ form_start(registrationForm) }}
                
                <div class="form-columns">
                    <div class="form-column">
                        <div class="form-section">
                            <h3 class="form-section-title">
                                <i class="fas fa-user-circle"></i>
                                Informations de compte
                            </h3>
                            
                            <div class="form-group">
                                {{ form_label(registrationForm.email, 'Adresse e-mail') }}
                                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'exemple@email.com'}}) }}
                                {% if form_errors(registrationForm.email) %}
                                    <div class="invalid-feedback">
                                        {{ form_errors(registrationForm.email) }}
                                    </div>
                                {% endif %}
                                <small class="form-helper">Cette adresse sera utilisée pour vous connecter</small>
                            </div>
                            
                            <div class="form-group">
                                {{ form_label(registrationForm.plainPassword, 'Mot de passe') }}
                                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                                {% if form_errors(registrationForm.plainPassword) %}
                                    <div class="invalid-feedback">
                                        {{ form_errors(registrationForm.plainPassword) }}
                                    </div>
                                {% endif %}
                                <small class="form-helper">Choisissez un mot de passe sécurisé</small>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-column">
                        <div class="form-section">
                            <h3 class="form-section-title">
                                <i class="fas fa-id-card"></i>
                                Informations personnelles
                            </h3>
                            
                            <div class="form-group">
                                {{ form_label(registrationForm.responsable, 'Personne responsable') }}
                                {{ form_widget(registrationForm.responsable, {'attr': {'class': 'form-control'}}) }}
                                {% if form_errors(registrationForm.responsable) %}
                                    <div class="invalid-feedback">
                                        {{ form_errors(registrationForm.responsable) }}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="form-check">
                        {{ form_widget(registrationForm.agreeTerms) }}
                        <label for="{{ registrationForm.agreeTerms.vars.id }}">
                            J'accepte les <a href="#" style="color: var(--primary-color);">conditions d'utilisation</a> et la <a href="#" style="color: var(--primary-color);">politique de confidentialité</a>
                        </label>
                    </div>
                    {% if form_errors(registrationForm.agreeTerms) %}
                        <div class="invalid-feedback">
                            {{ form_errors(registrationForm.agreeTerms) }}
                        </div>
                    {% endif %}
                </div>
                
                <div class="form-actions">
                    <a href="{{ path('app_login') }}" class="btn-outline">
                        <i class="fas fa-arrow-left" style="margin-right: 0.5rem;"></i>
                        Retour
                    </a>
                    
                    <button type="submit" class="btn-register">
                        <i class="fas fa-user-plus"></i>
                        S'inscrire
                    </button>
                </div>
                
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function previewImage(event) {
            const input = event.target;
            const preview = document.getElementById('image-preview');
            
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.src = e.target.result;
                }
                reader.readAsDataURL(input.files[0]);
            } else {
                preview.src = '{{ asset('placeholder-image.png') }}';
            }
        }
    </script>
{% endblock %}