{% extends 'base.html.twig' %}

{% block title %}Modifier l'intervention - Emusic{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .conteneurPage {
            max-width: 900px;
            margin: 0 auto;
            padding: 2rem;
        }
        
        .enTetePage {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }
        
        .titrePage {
            font-size: 1.8rem;
            font-weight: 600;
            color: var(--text-light);
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .titrePage i {
            color: var(--primary-color);
        }
        
        .actionsTitre {
            display: flex;
            gap: 1rem;
        }
        
        .btnRetour {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.7rem 1.2rem;
            border-radius: var(--border-radius);
            background-color: transparent;
            color: var(--text-light);
            border: 1px solid var(--border-light);
            text-decoration: none;
            transition: var(--transition);
        }
        
        .btnRetour:hover {
            background-color: var(--card-hover);
            transform: translateY(-2px);
        }
        
        .carteFormulaire {
            background-color: var(--card-bg);
            border-radius: var(--border-radius-lg);
            overflow: hidden;
            box-shadow: var(--shadow-md);
            border: 1px solid var(--border-light);
            margin-bottom: 2rem;
        }
        
        .enTeteCarte {
            background-color: var(--sidebar-bg);
            padding: 1.2rem 1.5rem;
            border-bottom: 1px solid var(--border-light);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .titreCarte {
            font-size: 1.2rem;
            font-weight: 600;
            color: var(--text-light);
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .titreCarte i {
            color: var(--primary-color);
        }
        
        .corpsCarte {
            padding: 2rem;
        }
        
        .grilleFormulaire {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 2rem;
        }
        
        .groupeChamp {
            margin-bottom: 1.5rem;
        }
        
        .groupeChamp label {
            display: block;
            font-weight: 500;
            color: var(--text-light);
            margin-bottom: 0.5rem;
        }
        
        .groupeChamp input,
        .groupeChamp select,
        .groupeChamp textarea {
            width: 100%;
            padding: 0.8rem 1rem;
            background-color: var(--input-bg);
            border: 1px solid var(--border-light);
            border-radius: var(--border-radius);
            color: var(--text-light);
            transition: var(--transition);
        }
        
        .groupeChamp input:focus,
        .groupeChamp select:focus,
        .groupeChamp textarea:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px var(--primary-transparent);
            outline: none;
        }
        
        .groupeChamp textarea {
            min-height: 120px;
            resize: vertical;
        }
        
        .libellePiece {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-bottom: 0.5rem;
        }
        
        .libellePiece i {
            color: var(--primary-color);
            font-size: 1.1rem;
        }
        
        .btnEnregistrer {
            width: 100%;
            padding: 0.8rem 1rem;
            background-color: var(--primary-color);
            color: white;
            border: none;
            border-radius: var(--border-radius);
            font-weight: 500;
            cursor: pointer;
            transition: var(--transition);
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 0.5rem;
            font-size: 1rem;
        }
        
        .btnEnregistrer:hover {
            background-color: var(--primary-dark);
            box-shadow: var(--glow-primary);
            transform: translateY(-2px);
        }
        
        .texteAide {
            font-size: 0.85rem;
            color: var(--text-muted);
            margin-top: 0.5rem;
        }
        
        .messageDuree {
            margin-top: 1.5rem;
            padding: 1rem;
            background-color: var(--primary-transparent);
            border-radius: var(--border-radius);
            border-left: 3px solid var(--primary-color);
        }
        
        .messageDuree .titreMessage {
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: var(--primary-color);
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .messageDuree .contenuMessage {
            color: var(--text-muted);
        }
        
        @media (max-width: 768px) {
            .grilleFormulaire {
                grid-template-columns: 1fr;
                gap: 1rem;
            }
            
            .enTetePage {
                flex-direction: column;
                align-items: flex-start;
                gap: 1rem;
            }
            
            .corpsCarte {
                padding: 1.5rem;
            }
            
            .conteneurPage {
                padding: 1rem;
            }
        }
    </style>
{% endblock %}

{% block content %}
    <div class="conteneurPage">
        <div class="enTetePage">
            <h1 class="titrePage">
                <i class="fas fa-edit"></i>
                Modifier l'intervention
            </h1>
            
            <div class="actionsTitre">
                <a href="{{ path('intervention_consulter', {'id': intervention.id}) }}" class="btnRetour">
                    <i class="fas fa-eye"></i>
                    Voir les détails
                </a>
            </div>
        </div>
        
        <div class="carteFormulaire">
            <div class="enTeteCarte">
                <h2 class="titreCarte">
                    <i class="fas fa-tools"></i>
                    Informations de l'intervention
                </h2>
                
                <span class="badge">ID: {{ intervention.id }}</span>
            </div>
            
            <div class="corpsCarte">
                {{ form_start(form, {'method': 'POST'}) }}
                
                <div class="grilleFormulaire">
                    <div>
                        <div class="groupeChamp">
                            <div class="libellePiece">
                                <i class="fas fa-calendar-plus"></i>
                                {{ form_label(form.dateDebut, 'Date de début') }}
                            </div>
                            {{ form_widget(form.dateDebut) }}
                            <p class="texteAide">Date de début de l'intervention</p>
                        </div>
                        
                        <div class="groupeChamp">
                            <div class="libellePiece">
                                <i class="fas fa-calendar-check"></i>
                                {{ form_label(form.dateFin, 'Date de fin') }}
                            </div>
                            {{ form_widget(form.dateFin) }}
                            <p class="texteAide">Date prévue de fin d'intervention</p>
                        </div>
                        
                        <div class="groupeChamp">
                            <div class="libellePiece">
                                <i class="fas fa-tag"></i>
                                {{ form_label(form.prix, 'Prix') }}
                            </div>
                            {{ form_widget(form.prix, {'attr': {'placeholder': 'Prix en euros'}}) }}
                            <p class="texteAide">Coût total de l'intervention</p>
                        </div>
                        
                        <div class="groupeChamp">
                            <div class="libellePiece">
                                <i class="fas fa-percentage"></i>
                                {{ form_label(form.quotite, 'Quotité') }}
                            </div>
                            {{ form_widget(form.quotite, {'attr': {'placeholder': 'Pourcentage'}}) }}
                            <p class="texteAide">Pourcentage du prix pris en charge</p>
                        </div>
                    </div>
                    
                    <div>
                        <div class="groupeChamp">
                            <div class="libellePiece">
                                <i class="fas fa-guitar"></i>
                                {{ form_label(form.instrument, 'Instrument') }}
                            </div>
                            {{ form_widget(form.instrument) }}
                            <p class="texteAide">Instrument concerné par l'intervention</p>
                        </div>
                        
                        <div class="groupeChamp">
                            <div class="libellePiece">
                                <i class="fas fa-align-left"></i>
                                {{ form_label(form.descriptif, 'Description') }}
                            </div>
                            {{ form_widget(form.descriptif, {'attr': {'placeholder': 'Décrivez l\'intervention en détail'}}) }}
                            <p class="texteAide">Description détaillée des travaux effectués</p>
                        </div>
                    </div>
                </div>
                
                <div class="messageDuree">
                    <div class="titreMessage">
                        <i class="fas fa-info-circle"></i>
                        Durée calculée
                    </div>
                    <div class="contenuMessage">
                        <span id="duree-jours">Calculer</span> entre la date de début et la date de fin.
                    </div>
                </div>
                
                <div class="groupeChamp" style="margin-top: 1.5rem;">
                    {{ form_widget(form.enregistrer, {'attr': {'class': 'btnEnregistrer'}}) }}
                </div>
                
                {{ form_end(form) }}
            </div>
        </div>
        
        <a href="{{ path('intervention_lister') }}" class="btnRetour" style="display: inline-flex;">
            <i class="fas fa-arrow-left"></i>
            Retour à la liste des interventions
        </a>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
           const dateDebutInput = document.querySelector('input[name$="[dateDebut]"]');
            const dateFinInput = document.querySelector('input[name$="[dateFin]"]');
            const dureeJours = document.getElementById('duree-jours');
            
            function calculerDuree() {
                if (dateDebutInput.value && dateFinInput.value) {
                    const debut = new Date(dateDebutInput.value);
                    const fin = new Date(dateFinInput.value);
                    
                   const diffTime = Math.abs(fin - debut);
                    const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
                    
                    dureeJours.textContent = diffDays + ' jour' + (diffDays > 1 ? 's' : '');
                } else {
                    dureeJours.textContent = 'Sélectionnez les deux dates';
                }
            }
            
            calculerDuree();
            
            dateDebutInput.addEventListener('change', calculerDuree);
            dateFinInput.addEventListener('change', calculerDuree);
            
            const form = document.querySelector('form');
            form.addEventListener('submit', function(e) {
                const debut = new Date(dateDebutInput.value);
                const fin = new Date(dateFinInput.value);
                
                if (fin < debut) {
                    e.preventDefault();
                    alert('La date de fin ne peut pas être antérieure à la date de début.');
                }
            });
        });
    </script>
{% endblock %}