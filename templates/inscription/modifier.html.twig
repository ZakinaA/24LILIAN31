{% extends 'base.html.twig' %}

{% block content %}
<main class="inscription-modifier-main">
    <header class="inscription-modifier-header">
        <h1>Modifier une Inscription</h1>
    </header>

    <section class="inscription-modifier-form">
        <div class="inscription-modifier-form-container">
            <h2>Veuillez mettre à jour les informations suivantes :</h2>
            
            {{ form_start(form) }}

            <div class="inscription-modifier-form-group">
                {{ form_label(form.dateInscription) }}
                {{ form_widget(form.dateInscription) }}
            </div>

            <div class="inscription-modifier-form-group">
                {{ form_label(form.eleve) }}
                {{ form_widget(form.eleve) }}
            </div>

            <div class="inscription-modifier-form-group">
                {{ form_label(form.cours) }}
                {{ form_widget(form.cours) }}
            </div>

            

            <div class="inscription-modifier-form-group">
                {{ form_widget(form.enregistrer) }}
            </div>

            {{ form_end(form) }}
        </div>
    </section>
</main>

<style>
/* Styles généraux pour la page de modification */
.inscription-modifier-main {
    padding: 30px;
    min-height: 100vh;
}

.inscription-modifier-header {
    text-align: center;
    margin-bottom: 30px;
}

.inscription-modifier-header h1 {
    font-size: 2rem;
    color: green;
    text-transform: uppercase;
    font-weight: bold;
}

.inscription-modifier-form {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
    background-color: #181B22;
    border-radius: 10px;
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
}

.inscription-modifier-form-container h2 {
    font-size: 1.5rem;
    margin-bottom: 20px;
    color: white;
    text-align: center;
}

.inscription-modifier-form-group {
    margin-bottom: 20px;
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.inscription-modifier-form-group label {
    font-size: 1rem;
    font-weight: bold;
    color: white;
}

.inscription-modifier-form-group input, 
.inscription-modifier-form-group select, 
.inscription-modifier-form-group textarea {
    padding: 10px;
    font-size: 1rem;
    border: 1px solid black;
    border-radius: 5px;
    color: white;
    background-color: #181B22;
    transition: border-color 0.3s ease;
}

.inscription-modifier-form-group input:focus, 
.inscription-modifier-form-group select:focus, 
.inscription-modifier-form-group textarea:focus {
    border-color: green;
    outline: none;
}

.inscription-modifier-form-group button {
    padding: 10px 20px;
    background-color: green;
    color: black;
    border: none;
    border-radius: 5px;
    font-size: 1rem;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.inscription-modifier-form-group button:hover {
    background-color: green;
}

.inscription-modifier-form-container {
    display: flex;
    flex-direction: column;
    gap: 20px;
}

.inscription-modifier-form-container h2 {
    font-size: 1.5rem;
    color: white;
    margin-bottom: 20px;
}

.inscription-modifier-main {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}
</style>
{% endblock %}
