{% extends 'base.html.twig' %}

{% block title %}Liste des Modeles{% endblock %}

{% block body %}
    <h1>Liste des Modeles</h1>
    <table>
        {% for e in pModeles %}
        <tr>
            <td>{{ e.nom }}</td>
        </tr>
        {% else %}
        <tr>
            <td>Aucun modele n'a été trouvé.</td>
        </tr>
        {% endfor %}
    </table>

    <div class="bouton">
        <a href="{{ path('modeleAjouter') }}" class="btn btn-primary">Ajouter un Modele</a>
    </div>
{% endblock %}
