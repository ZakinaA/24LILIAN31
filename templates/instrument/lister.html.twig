{% extends 'base.html.twig' %}

    <table class="document-table">
        <tbody>
            {% for instrument in pInstruments %}
                <tr>
                    <td>
                        <a href="#" class="instrument-name" 
                        data-id="{{ instrument.id }}"
                        data-numSerie="{{ instrument.numSerie }}"
                        data-dateAchat="{{ instrument.dateAchat|date('d/m/Y') }}"
                        data-prixAchat="{{ instrument.prixAchat }}"
                                   data-utilisation="{{ instrument.utilisation }}"
                                   data-couleur="{{ instrument.couleur }}"
                                   data-typeInstrument="{{ instrument.typeInstrument.libelle }}"
                                   data-interventions="{{ instrument.interventions|json_encode }}">
                                    {{ instrument.numSerie }}
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td>Aucun instrument n'a été trouvé.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </main>
    </div>

    <div id="instrumentModal" class="modal">
        <div class="modal-content">
            <button class="close-btn">&times;</button>
            <h2>Détails de l'instrument</h2>
            <div class="tabs">
                <button class="tab-button active" data-target="instrument">Instrument</button>
                <button class="tab-button" data-target="modele">Prêt</button>
                <button class="tab-button" data-target="marque">Intervention</button>
                <button class="tab-button" data-target="accessoire">Accessoire</button>
            </div>

            <div class="tab-content">
                <div class="tab-panel" id="instrument">
                    <table>
                        <tr><td>Numéro de série :</td><td><span id="modal-numSerie"></span></td></tr>
                        <tr><td>Date d'achat :</td><td><span id="modal-dateAchat"></span></td></tr>
                        <tr><td>Prix d'achat :</td><td><span id="modal-prixAchat"></span></td></tr>
                        <tr><td>Utilisation :</td><td><span id="modal-utilisation"></span></td></tr>
                        <tr><td>Couleur :</td><td><span id="modal-couleur"></span></td></tr>
                        <tr><td>Type instrument :</td><td><span id="modal-typeInstrument"></span></td></tr>
                    </table>
                </div>

                <div class="tab-panel hidden" id="modele">
                    <table>
                        <tr><td>Prêt :</td><td>test</td></tr>
                    </table>
                </div>

                <div class="tab-panel hidden" id="marque">
                    <ul id="interventionsList">
					
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Modal functionality
        const modal = document.getElementById("instrumentModal");
        const closeModal = document.querySelector(".close-btn");

        document.querySelectorAll(".instrument-name").forEach(link => {
            link.addEventListener("click", function(event) {
                event.preventDefault();

                const instrumentId = this.getAttribute("data-id");
                const numSerie = this.getAttribute("data-numSerie");
                const dateAchat = this.getAttribute("data-dateAchat");
                const prixAchat = this.getAttribute("data-prixAchat");
                const utilisation = this.getAttribute("data-utilisation");
                const couleur = this.getAttribute("data-couleur");
                const typeInstrument = this.getAttribute("data-typeInstrument");
                const interventions = JSON.parse(this.getAttribute("data-interventions"));

                // Update modal with instrument details
                document.getElementById("modal-numSerie").innerText = numSerie;
                document.getElementById("modal-dateAchat").innerText = dateAchat;
                document.getElementById("modal-prixAchat").innerText = prixAchat;
                document.getElementById("modal-utilisation").innerText = utilisation;
                document.getElementById("modal-couleur").innerText = couleur;
                document.getElementById("modal-typeInstrument").innerText = typeInstrument;

                // Handle interventions
                const interventionsContainer = document.getElementById("interventionsList");
                interventionsContainer.innerHTML = '';  // Clear previous interventions
                if (interventions.length > 0) {
                    interventions.forEach(function(intervention) {
                        const li = document.createElement("li");
                        li.innerText = `${intervention.descriptif} (${new Date(intervention.dateDebut).toLocaleDateString()}) - ${intervention.prix} €`;
                        interventionsContainer.appendChild(li);
                    });
                } else {
                    const li = document.createElement("li");
                    li.innerText = "Aucune intervention disponible.";
                    interventionsContainer.appendChild(li);
                }

                // Display modal
                modal.style.display = "flex";
            });
        });

        // Close modal
        closeModal.addEventListener("click", function() {
            modal.style.display = "none";
        });

        window.onclick = function(event) {
            if (event.target === modal) {
                modal.style.display = "none";
            }
        };

        // Tab functionality
        document.addEventListener("DOMContentLoaded", function () {
            const tabButtons = document.querySelectorAll(".tab-button");
            const tabPanels = document.querySelectorAll(".tab-panel");

            tabButtons.forEach(button => {
                button.addEventListener("click", () => {
                    tabButtons.forEach(btn => btn.classList.remove("active"));
                    tabPanels.forEach(panel => panel.classList.add("hidden"));

                    button.classList.add("active");
                    const target = button.getAttribute("data-target");
                    document.getElementById(target).classList.remove("hidden");
                });
            });

            // Set the first tab as active
            tabButtons[0].classList.add("active");
            tabPanels[0].classList.remove("hidden");
        });
    </script>
</body>
</html>
