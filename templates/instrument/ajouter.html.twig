{% extends 'base.html.twig' %}

{% block title %}Ajout d'un instrument - Emusic{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .conteneurPage {
            max-width: 1000px;
            margin: 0 auto;
            padding: 2rem;
        }
        
        .enTetePage {
            margin-bottom: 2rem;
            text-align: center;
        }
        
        .titrePage {
            font-size: 1.8rem;
            font-weight: 600;
            color: var(--text-light);
            margin-bottom: 0.5rem;
        }
        
        .sousTitrePage {
            color: var(--text-muted);
            font-size: 1rem;
        }
        
        .carteFormulaire {
            background-color: var(--card-bg);
            border-radius: var(--border-radius-lg);
            overflow: hidden;
            box-shadow: var(--shadow-md);
            border: 1px solid var(--border-light);
            margin-bottom: 2rem;
        }
        
        .enTeteCarte {
            background-color: var(--sidebar-bg);
            padding: 1.2rem 1.5rem;
            border-bottom: 1px solid var(--border-light);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .titreCarte {
            font-size: 1.2rem;
            font-weight: 600;
            color: var(--text-light);
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .titreCarte i {
            color: var(--primary-color);
        }
        
        .corpsCarte {
            padding: 2rem;
        }
        
        .grilleFormulaire {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 2rem;
        }
        
        .groupeChamp {
            margin-bottom: 1.5rem;
        }
        
        .groupeChamp label {
            display: block;
            font-weight: 500;
            color: var(--text-light);
            margin-bottom: 0.5rem;
        }
        
        .groupeChamp input,
        .groupeChamp select,
        .groupeChamp textarea {
            width: 100%;
            padding: 0.8rem 1rem;
            background-color: var(--input-bg);
            border: 1px solid var(--border-light);
            border-radius: var(--border-radius);
            color: var(--text-light);
            transition: var(--transition);
        }
        
        .groupeChamp input:focus,
        .groupeChamp select:focus,
        .groupeChamp textarea:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px var(--primary-transparent);
            outline: none;
        }
        
        .conteneurImage {
            width: 100%;
            height: 220px;
            border-radius: var(--border-radius);
            overflow: hidden;
            border: 1px solid var(--border-light);
            background-color: var(--sidebar-bg);
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 1rem;
            position: relative;
        }
        
        .conteneurImage img {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
        }
        
        .conteneurImage.vide:after {
            content: 'Aucune image sélectionnée';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: var(--text-muted);
            font-size: 0.9rem;
        }
        
        .libellePiece {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-bottom: 0.5rem;
        }
        
        .libellePiece i {
            color: var(--primary-color);
            font-size: 1.1rem;
        }
        
        .btnEnregistrer {
            width: 100%;
            padding: 0.8rem 1rem;
            background-color: var(--primary-color);
            color: white;
            border: none;
            border-radius: var(--border-radius);
            font-weight: 500;
            cursor: pointer;
            transition: var(--transition);
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 0.5rem;
            font-size: 1rem;
        }
        
        .btnEnregistrer:hover {
            background-color: var(--primary-dark);
            box-shadow: var(--glow-primary);
            transform: translateY(-2px);
        }
        
        .barreProgression {
            height: 6px;
            background-color: var(--sidebar-bg);
            border-radius: 10px;
            overflow: hidden;
            margin-top: 1rem;
        }
        
        .indicateurProgression {
            height: 100%;
            width: 0;
            background-color: var(--primary-color);
            border-radius: 10px;
            transition: width 0.3s ease;
        }
        
        .lienRetour {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            color: var(--text-muted);
            text-decoration: none;
            padding: 0.5rem 0;
            font-size: 0.9rem;
            transition: var(--transition);
        }
        
        .lienRetour:hover {
            color: var(--text-light);
        }
        
        @media (max-width: 768px) {
            .grilleFormulaire {
                grid-template-columns: 1fr;
                gap: 1rem;
            }
            
            .conteneurPage {
                padding: 1rem;
            }
            
            .corpsCarte {
                padding: 1.5rem;
            }
        }
    </style>
{% endblock %}

{% block content %}
    <div class="conteneurPage">
        <div class="enTetePage">
            <h1 class="titrePage">Ajout d'un instrument</h1>
            <p class="sousTitrePage">Remplissez tous les champs pour enregistrer un nouvel instrument</p>
        </div>
        
        <div class="carteFormulaire">
            <div class="enTeteCarte">
                <h2 class="titreCarte">
                    <i class="fas fa-guitar"></i>
                    Informations de l'instrument
                </h2>
            </div>
            
            <div class="corpsCarte">
                {{ form_start(form) }}
                
                <div class="grilleFormulaire">
                    <div>
                        <div class="groupeChamp">
                            <div class="libellePiece">
                                <i class="fas fa-barcode"></i>
                                {{ form_label(form.numSerie, 'Numéro de série') }}
                            </div>
                            {{ form_widget(form.numSerie, {'attr': {'placeholder': 'Saisissez le numéro de série'}}) }}
                        </div>
                        
                        <div class="groupeChamp">
                            <div class="libellePiece">
                                <i class="fas fa-calendar-alt"></i>
                                {{ form_label(form.dateAchat, 'Date d\'achat') }}
                            </div>
                            {{ form_widget(form.dateAchat) }}
                        </div>
                        
                        <div class="groupeChamp">
                            <div class="libellePiece">
                                <i class="fas fa-tag"></i>
                                {{ form_label(form.prixAchat, 'Prix d\'achat') }}
                            </div>
                            {{ form_widget(form.prixAchat, {'attr': {'placeholder': 'Prix en euros'}}) }}
                        </div>
                        
                        <div class="groupeChamp">
                            <div class="libellePiece">
                                <i class="fas fa-info-circle"></i>
                                {{ form_label(form.utilisation, 'Utilisation') }}
                            </div>
                            {{ form_widget(form.utilisation) }}
                        </div>
                        
                        <div class="groupeChamp">
                            <div class="libellePiece">
                                <i class="fas fa-palette"></i>
                                {{ form_label(form.couleur, 'Couleur') }}
                            </div>
                            {{ form_widget(form.couleur, {'attr': {'placeholder': 'Couleur de l\'instrument'}}) }}
                        </div>
                    </div>
                    
                    <div>
                        <div class="groupeChamp">
                            <div class="libellePiece">
                                <i class="fas fa-music"></i>
                                {{ form_label(form.typeInstrument, 'Type d\'instrument') }}
                            </div>
                            {{ form_widget(form.typeInstrument) }}
                        </div>
                        
                        <div class="groupeChamp">
                            <div class="libellePiece">
                                <i class="fas fa-copyright"></i>
                                {{ form_label(form.marque, 'Marque') }}
                            </div>
                            {{ form_widget(form.marque, {'attr': {'placeholder': 'Marque de l\'instrument'}}) }}
                        </div>
                        
                        <div class="groupeChamp">
                            <div class="libellePiece">
                                <i class="fas fa-bookmark"></i>
                                {{ form_label(form.modele, 'Modèle') }}
                            </div>
                            {{ form_widget(form.modele, {'attr': {'placeholder': 'Modèle de l\'instrument'}}) }}
                        </div>
                        
                        <div class="conteneurImage vide" id="preview-container">
                            <img id="image-preview" src="{{ asset('placeholder-image.png') }}" alt="Prévisualisation">
                        </div>
                        
                        <div class="groupeChamp">
                            <div class="libellePiece">
                                <i class="fas fa-image"></i>
                                {{ form_label(form.cheminImage, 'Image de l\'instrument') }}
                            </div>
                            {{ form_widget(form.cheminImage) }}
                        </div>
                    </div>
                </div>
                
                <div class="groupeChamp" style="margin-top: 1rem;">
                    {{ form_widget(form.enregistrer, {'attr': {'class': 'btnEnregistrer'}}) }}
                </div>
                
                {{ form_end(form) }}
                
                <div class="barreProgression">
                    <div class="indicateurProgression" id="barre-progression"></div>
                </div>
            </div>
        </div>
        
        <a href="{{ path('instrumentLister') }}" class="lienRetour">
            <i class="fas fa-arrow-left"></i>
            Retour à la liste des instruments
        </a>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
        
            const inputImage = document.querySelector('input[type="file"]');
            const previewImage = document.getElementById('image-preview');
            const previewContainer = document.getElementById('preview-container');
            
            if (inputImage) {
                inputImage.addEventListener('change', function(e) {
                    if (e.target.files && e.target.files[0]) {
                        const reader = new FileReader();
                        
                        reader.onload = function(event) {
                            previewImage.src = event.target.result;
                            previewContainer.classList.remove('vide');
                        }
                        
                        reader.readAsDataURL(e.target.files[0]);
                    } else {
                        previewImage.src = '{{ asset('placeholder-image.png') }}';
                        previewContainer.classList.add('vide');
                    }
                });
            }
            
            const form = document.querySelector('form');
            const barreProgression = document.getElementById('barre-progression');
            
            if (form) {
                form.addEventListener('submit', function() {
                    let progres = 0;
                    const interval = setInterval(function() {
                        progres += 5;
                        barreProgression.style.width = progres + '%';
                        
                        if (progres >= 90) {
                            clearInterval(interval);
                        }
                    }, 100);
                });
            }
        });
    </script>
{% endblock %}