{% extends 'base.html.twig' %}

{% block content %}
<style>
    a {
        text-decoration: none;
    }

    h1 {
        font-size: 40px;
    }

    .eleve-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 40px;
        margin-top: 40px;
    }

    .eleve-item {
        text-align: center;
        color: white;
        width: 200px;
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease;
        margin-bottom: 40px;
    }

    .eleve-item:hover {
        transform: scale(1.05);
        box-shadow: 0 10px 15px rgba(0, 0, 0, 0.3);
        background-color: #313237;
        border-radius: 10px;
    }

    .eleve-photo {
        width: 120px;
        height: 120px;
        margin: 0 auto;
        border-radius: 50%;
        background-size: cover;
        background-position: center;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
    }

    .eleve-item p {
        margin-top: 15px;
        font-size: 1.2rem;
    }

    .info-btn {
        display: block;
        margin-top: 10px;
        text-decoration: none;
        color: #fff;
        font-size: 1rem;
        background-color: green;
        padding: 5px 10px;
        border-radius: 5px;
        text-align: center;
    }

    .info-btn:hover {
        background-color: #313237;
    }

    /* New delete button styles */
    .delete-btn {
        display: block;
        margin-top: 10px;
        text-decoration: none;
        color: #fff;
        font-size: 1.2rem;
        background-color: red;
        padding: 5px 10px;
        border-radius: 5px;
        text-align: center;
    }

    .delete-btn:hover {
        background-color: #b23131;
    }

    .delete-btn i {
        margin-right: 5px;
    }

    /* Popup Styles */
    .popup {
        display: none;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: #181B22;
        padding: 20px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        z-index: 999;
    }

    .popup-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        z-index: 998;
    }

    .popup.open, .popup-overlay.open {
        display: block;
    }

    /* Tab Styles */
    .tabs {
        margin-bottom: 10px;
    }

    .tab-button {
        padding: 10px;
        margin-right: 10px;
        cursor: pointer;
        background-color: #f1f1f1;
        border: 1px solid #ddd;
    }

    .tab-button.active {
        background-color: #181B22;
        color: white;
    }

    .tab-panel {
        display: none;
    }

    .tab-panel.active {
        display: block;
    }
</style>

<h1>Liste des élèves</h1>

<div class="eleve-grid">
    {% for e in eEleves %}
        <div class="eleve-item">
            <a href="{{ path('eleveConsulter', { 'id': e.id }) }}">
                <div class="eleve-photo" style="background-image: url('{{ asset('eleve/' ~ e.cheminImage) }}');"></div>
            </a>
            <p>{{ e.nom }} {{ e.prenom }}</p>
            <a href="#" class="info-btn" data-id="{{ e.id }}"
               data-nom="{{ e.nom }}"
               data-prenom="{{ e.prenom }}"
               data-tel="{{ e.tel }}"
               data-mail="{{ e.mail }}"
               data-numRue="{{ e.numRue }}"
               data-rue="{{ e.rue }}"
               data-copos="{{ e.copos }}"
               data-ville="{{ e.ville }}">
                + d'infos
            </a>
            
            <!-- New Delete Button -->
            <a href="#" class="delete-btn" data-id="{{ e.id }}">
                <i class="fas fa-trash-alt"></i> Supprimer
            </a>
        </div>
    {% else %}
        <p>Aucun élève trouvé.</p>
    {% endfor %}
</div>

<!-- Popup Modal -->
<div class="popup-overlay"></div>
<div class="popup">
    <button class="close-btn">&times;</button>
    <h2>Détails de l'élève</h2>
    <div class="tabs">
        <button class="tab-button active" data-target="eleve">Élève</button>
    </div>

    <div class="tab-content">
        <div class="tab-panel active" id="eleve">
            <table>
                <tr><td>Nom :</td><td><span id="modal-nom"></span></td></tr>
                <tr><td>Prénom :</td><td><span id="modal-prenom"></span></td></tr>
                <tr><td>Téléphone :</td><td><span id="modal-tel"></span></td></tr>
                <tr><td>Email :</td><td><span id="modal-mail"></span></td></tr>
                <tr><td>Adresse :</td><td><span id="modal-adresse"></span></td></tr>
            </table>
        </div>
    </div>
</div>

<script>
    // Ouvrir la popup et charger les données de l'élève
    document.querySelectorAll('.info-btn').forEach(button => {
        button.addEventListener('click', function(event) {
            event.preventDefault();

            // Récupérer les informations et les afficher dans le modal
            document.getElementById('modal-nom').textContent = this.dataset.nom;
            document.getElementById('modal-prenom').textContent = this.dataset.prenom;
            document.getElementById('modal-tel').textContent = this.dataset.tel;
            document.getElementById('modal-mail').textContent = this.dataset.mail;
            document.getElementById('modal-adresse').textContent = this.dataset.numRue + ' ' + this.dataset.rue + ', ' + this.dataset.copos + ' ' + this.dataset.ville;

            document.querySelector('.popup').classList.add('open');
            document.querySelector('.popup-overlay').classList.add('open');
        });
    });

    document.querySelector('.close-btn').addEventListener('click', function() {
        document.querySelector('.popup').classList.remove('open');
        document.querySelector('.popup-overlay').classList.remove('open');
    });

    document.querySelector('.popup-overlay').addEventListener('click', function() {
        document.querySelector('.popup').classList.remove('open');
        document.querySelector('.popup-overlay').classList.remove('open');
    });

    // Confirmation de suppression
    document.querySelectorAll('.delete-btn').forEach(button => {
        button.addEventListener('click', function(event) {
            event.preventDefault();

            const eleveId = this.dataset.id;
            const confirmation = confirm('Êtes-vous sûr de vouloir supprimer cet élève ?');
            
            if (confirmation) {
                window.location.href = `http://localhost/24lilian31/public/eleve/supprimer/${eleveId}`;
            }
        });
    });

</script>
{% endblock %}
