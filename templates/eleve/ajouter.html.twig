{% extends 'base.html.twig' %}

{% block title %}Ajouter un élève - Emusic{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .conteneurPage {
            max-width: 1000px;
            margin: 0 auto;
            padding: 2rem;
        }
        
        .enTetePage {
            margin-bottom: 2rem;
            text-align: center;
        }
        
        .titrePage {
            font-size: 1.8rem;
            font-weight: 600;
            color: var(--text-light);
            margin-bottom: 0.5rem;
        }
        
        .sousTitrePage {
            color: var(--text-muted);
            font-size: 1rem;
        }
        
        .carteFormulaire {
            background-color: var(--card-bg);
            border-radius: var(--border-radius-lg);
            overflow: hidden;
            box-shadow: var(--shadow-md);
            border: 1px solid var(--border-light);
            margin-bottom: 2rem;
        }
        
        .enTeteCarte {
            background-color: var(--sidebar-bg);
            padding: 1.2rem 1.5rem;
            border-bottom: 1px solid var(--border-light);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .titreCarte {
            font-size: 1.2rem;
            font-weight: 600;
            color: var(--text-light);
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .titreCarte i {
            color: var(--primary-color);
        }
        
        .corpsCarte {
            padding: 2rem;
        }
        
        .grilleFormulaire {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 2rem;
        }
        
        .colonneGauche, .colonneDroite {
            display: flex;
            flex-direction: column;
        }
        
        .groupeChamp {
            margin-bottom: 1.5rem;
        }
        
        .groupeChamp label {
            display: block;
            font-weight: 500;
            color: var(--text-light);
            margin-bottom: 0.5rem;
        }
        
        .groupeChamp input,
        .groupeChamp select,
        .groupeChamp textarea {
            width: 100%;
            padding: 0.8rem 1rem;
            background-color: var(--input-bg);
            border: 1px solid var(--border-light);
            border-radius: var(--border-radius);
            color: var(--text-light);
            transition: var(--transition);
        }
        
        .groupeChamp input:focus,
        .groupeChamp select:focus,
        .groupeChamp textarea:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px var(--primary-transparent);
            outline: none;
        }
        
        .sectionFormulaire {
            margin-bottom: 1.5rem;
        }
        
        .titreSection {
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--text-light);
            margin-bottom: 1.2rem;
            padding-bottom: 0.5rem;
            border-bottom: 1px solid var(--border-light);
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .titreSection i {
            color: var(--primary-color);
        }
        
        .conteneurImage {
            width: 100%;
            height: 220px;
            border-radius: var(--border-radius);
            overflow: hidden;
            border: 1px solid var(--border-light);
            background-color: var(--sidebar-bg);
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 1rem;
            position: relative;
        }
        
        .conteneurImage img {
            max-width: 100%;
            max-height: 100%;
            object-fit: cover;
        }
        
        .conteneurImage.vide:after {
            content: 'Aucune image sélectionnée';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: var(--text-muted);
            font-size: 0.9rem;
        }
        
        .libellePiece {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-bottom: 0.5rem;
        }
        
        .libellePiece i {
            color: var(--primary-color);
            font-size: 1.1rem;
        }
        
        .btnEnregistrer {
            width: 100%;
            padding: 0.8rem 1rem;
            background-color: var(--primary-color);
            color: white;
            border: none;
            border-radius: var(--border-radius);
            font-weight: 500;
            cursor: pointer;
            transition: var(--transition);
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 0.5rem;
            font-size: 1rem;
        }
        
        .btnEnregistrer:hover {
            background-color: var(--primary-dark);
            box-shadow: var(--glow-primary);
            transform: translateY(-2px);
        }
        
        .texteAide {
            font-size: 0.85rem;
            color: var(--text-muted);
            margin-top: 0.5rem;
        }
        
        .barreProgression {
            height: 6px;
            background-color: var(--sidebar-bg);
            border-radius: 10px;
            overflow: hidden;
            margin-top: 1.5rem;
        }
        
        .indicateurProgression {
            height: 100%;
            width: 0;
            background-color: var(--primary-color);
            border-radius: 10px;
            transition: width 0.3s ease;
        }
        
        .actionsFormulaire {
            display: flex;
            justify-content: space-between;
            margin-top: 2rem;
        }
        
        .btnRetour {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.7rem 1.2rem;
            border-radius: var(--border-radius);
            background-color: transparent;
            color: var(--text-light);
            border: 1px solid var(--border-light);
            text-decoration: none;
            transition: var(--transition);
        }
        
        .btnRetour:hover {
            background-color: var(--card-hover);
            transform: translateY(-2px);
        }
        
        @media (max-width: 768px) {
            .grilleFormulaire {
                grid-template-columns: 1fr;
                gap: 1rem;
            }
            
            .conteneurPage {
                padding: 1rem;
            }
            
            .corpsCarte {
                padding: 1.5rem;
            }
        }
    </style>
{% endblock %}

{% block content %}
    <div class="conteneurPage">
        <div class="enTetePage">
            <h1 class="titrePage">Ajouter un élève</h1>
            <p class="sousTitrePage">Complétez le formulaire ci-dessous pour enregistrer un nouvel élève</p>
        </div>
        
        <div class="carteFormulaire">
            <div class="enTeteCarte">
                <h2 class="titreCarte">
                    <i class="fas fa-user-graduate"></i>
                    Formulaire d'inscription
                </h2>
            </div>
            
            <div class="corpsCarte">
                {{ form_start(form) }}
                
                <div class="grilleFormulaire">
                    <div class="colonneGauche">
                        <div class="sectionFormulaire">
                            <h3 class="titreSection">
                                <i class="fas fa-user"></i>
                                Identité
                            </h3>
                            
                            <div class="groupeChamp">
                                <div class="libellePiece">
                                    <i class="fas fa-user-tag"></i>
                                    {{ form_label(form.nom, 'Nom') }}
                                </div>
                                {{ form_widget(form.nom, {'attr': {'placeholder': 'Nom de famille'}}) }}
                                <p class="texteAide">Nom de famille de l'élève</p>
                            </div>
                            
                            <div class="groupeChamp">
                                <div class="libellePiece">
                                    <i class="fas fa-id-card"></i>
                                    {{ form_label(form.prenom, 'Prénom') }}
                                </div>
                                {{ form_widget(form.prenom, {'attr': {'placeholder': 'Prénom'}}) }}
                                <p class="texteAide">Prénom de l'élève</p>
                            </div>
                        </div>
                        
                        <div class="sectionFormulaire">
                            <h3 class="titreSection">
                                <i class="fas fa-map-marker-alt"></i>
                                Adresse
                            </h3>
                            
                            <div class="groupeChamp">
                                <div class="libellePiece">
                                    <i class="fas fa-hashtag"></i>
                                    {{ form_label(form.numRue, 'Numéro de rue') }}
                                </div>
                                {{ form_widget(form.numRue, {'attr': {'placeholder': 'Ex: 12'}}) }}
                            </div>
                            
                            <div class="groupeChamp">
                                <div class="libellePiece">
                                    <i class="fas fa-road"></i>
                                    {{ form_label(form.rue, 'Rue') }}
                                </div>
                                {{ form_widget(form.rue, {'attr': {'placeholder': 'Nom de la rue'}}) }}
                            </div>
                            
                            <div class="groupeChamp">
                                <div class="libellePiece">
                                    <i class="fas fa-mail-bulk"></i>
                                    {{ form_label(form.copos, 'Code postal') }}
                                </div>
                                {{ form_widget(form.copos, {'attr': {'placeholder': 'Ex: 75000'}}) }}
                            </div>
                            
                            <div class="groupeChamp">
                                <div class="libellePiece">
                                    <i class="fas fa-city"></i>
                                    {{ form_label(form.ville, 'Ville') }}
                                </div>
                                {{ form_widget(form.ville, {'attr': {'placeholder': 'Nom de la ville'}}) }}
                            </div>
                        </div>
                    </div>
                    
                    <div class="colonneDroite">
                        <div class="sectionFormulaire">
                            <h3 class="titreSection">
                                <i class="fas fa-address-book"></i>
                                Contact
                            </h3>
                            
                            <div class="groupeChamp">
                                <div class="libellePiece">
                                    <i class="fas fa-phone"></i>
                                    {{ form_label(form.tel, 'Téléphone') }}
                                </div>
                                {{ form_widget(form.tel, {'attr': {'placeholder': 'Ex: 0123456789'}}) }}
                                <p class="texteAide">Numéro de téléphone de l'élève ou d'un parent</p>
                            </div>
                            
                            <div class="groupeChamp">
                                <div class="libellePiece">
                                    <i class="fas fa-envelope"></i>
                                    {{ form_label(form.mail, 'Email') }}
                                </div>
                                {{ form_widget(form.mail, {'attr': {'placeholder': 'exemple@email.com'}}) }}
                                <p class="texteAide">Adresse email pour les communications</p>
                            </div>
                        </div>
                        
                        <div class="sectionFormulaire">
                            <h3 class="titreSection">
                                <i class="fas fa-users"></i>
                                Responsable
                            </h3>
                            
                            <div class="groupeChamp">
                                <div class="libellePiece">
                                    <i class="fas fa-user-shield"></i>
                                    {{ form_label(form.responsable, 'Responsable légal') }}
                                </div>
                                {{ form_widget(form.responsable) }}
                                <p class="texteAide">Personne responsable de l'élève</p>
                            </div>
                        </div>
                        
                        <div class="sectionFormulaire">
                            <h3 class="titreSection">
                                <i class="fas fa-image"></i>
                                Photo
                            </h3>
                            
                            <div class="conteneurImage vide" id="preview-container">
                                <img id="image-preview" src="{{ asset('placeholder-image.png') }}" alt="Prévisualisation">
                            </div>
                            
                            <div class="groupeChamp">
                                <div class="libellePiece">
                                    <i class="fas fa-upload"></i>
                                    {{ form_label(form.cheminImage, 'Photo de l\'élève') }}
                                </div>
                                {{ form_widget(form.cheminImage) }}
                                <p class="texteAide">Formats acceptés : JPG, PNG (max 2Mo)</p>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="groupeChamp" style="margin-top: 1rem;">
                    {{ form_widget(form.enregistrer, {'attr': {'class': 'btnEnregistrer'}}) }}
                </div>
                
                {{ form_end(form) }}
                
                <div class="barreProgression">
                    <div class="indicateurProgression" id="barre-progression"></div>
                </div>
            </div>
        </div>
        
        <div class="actionsFormulaire">
            <a href="{{ path('gestionnaireListerEleve') }}" class="btnRetour">
                <i class="fas fa-arrow-left"></i>
                Retour à la liste des élèves
            </a>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const inputImage = document.querySelector('#eleve_cheminImage');
            const previewImage = document.getElementById('image-preview');
            const previewContainer = document.getElementById('preview-container');
            
            inputImage.addEventListener('change', function(e) {
                if (e.target.files && e.target.files[0]) {
                    const reader = new FileReader();
                    
                    reader.onload = function(event) {
                        previewImage.src = event.target.result;
                        previewContainer.classList.remove('vide');
                    }
                    
                    reader.readAsDataURL(e.target.files[0]);
                } else {
                    previewImage.src = '{{ asset('placeholder-image.png') }}';
                    previewContainer.classList.add('vide');
                }
            });
            
            const fields = document.querySelectorAll('.groupeChamp input, .groupeChamp select, .groupeChamp textarea');
            const progressBar = document.getElementById('barre-progression');
            
            function updateProgress() {
                const filledFields = Array.from(fields).filter(field => {
                     if (field.type === 'file') return true;
                    return field.value.trim() !== '';
                });
                
                const progress = (filledFields.length / fields.length) * 100;
                progressBar.style.width = `${progress}%`;
            }
            
            updateProgress();
            
            fields.forEach(field => {
                field.addEventListener('input', updateProgress);
                field.addEventListener('change', updateProgress);
            });
            
            const form = document.querySelector('form');
            form.addEventListener('submit', function(e) {
                const nom = document.querySelector('#eleve_nom').value.trim();
                const prenom = document.querySelector('#eleve_prenom').value.trim();
                
                if (!nom || !prenom) {
                    e.preventDefault();
                    alert('Les champs Nom et Prénom sont obligatoires.');
                }
            });
        });
    </script>
{% endblock %}