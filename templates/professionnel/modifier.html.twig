{% extends 'base.html.twig' %}

{% block title %}Ajout d'un professionnel - Emusic{% endblock %}

{% block content %}
<style>
    body, h1, h2, p, ul, li, a, img {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .ajouter-title-primary {
        font-size: 36px;
        font-weight: bold;
        text-align: center;
        color: var(--primary-color);
        margin-bottom: 20px;
    }

    .ajouter-formulaire-ajout {
        background-color: var(--card-bg);
        border-radius: 20px;
        padding: 20px;
        width: 800px;
        display: flex;
        gap: 40px;
        align-items: flex-start;
        margin: 0 auto;
        box-shadow: var(--shadow-md);
        border: 1px solid var(--border-light);
    }

    .ajouter-left-column,
    .ajouter-right-column {
        flex: 1;
    }

    .ajouter-image-container {
        width: 100%;
        height: 200px;
        border: 2px solid var(--border-light);
        border-radius: 10px;
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: var(--sidebar-bg);
        margin-bottom: 15px;
    }

    .ajouter-image-container img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .ajouter-form-group {
        margin-bottom: 15px;
    }

    .ajouter-form-group label {
        display: block;
        margin-bottom: 10px;
        font-weight: bold;
        color: var(--text-light);
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .ajouter-form-group label i {
        color: var(--primary-color);
    }

    .ajouter-form-group input,
    .ajouter-form-group select,
    .ajouter-form-group textarea {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid var(--border-light);
        background-color: var(--input-bg);
        color: var(--text-light);
        transition: var(--transition);
    }

    .ajouter-form-group input:focus,
    .ajouter-form-group select:focus,
    .ajouter-form-group textarea:focus {
        border-color: var(--primary-color);
        outline: none;
        box-shadow: 0 0 8px var(--primary-transparent);
    }

    .ajouter-form-group button {
        width: 100%;
        padding: 12px;
        background-color: var(--primary-color);
        color: white;
        border: none;
        border-radius: var(--border-radius);
        font-weight: 500;
        font-size: 1rem;
        cursor: pointer;
        transition: var(--transition);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

    .ajouter-form-group button:hover {
        background-color: var(--primary-dark);
        box-shadow: var(--glow-primary);
        transform: translateY(-2px);
    }

    .ajouter-progress-container {
        width: 100%;
        max-width: 800px;
        background-color: var(--sidebar-bg);
        border-radius: 20px;
        margin: 20px auto 0;
        height: 10px;
        overflow: hidden;
    }

    .ajouter-progress-bar {
        width: 0%;
        height: 100%;
        background-color: var(--primary-color);
        transition: width 0.3s ease;
    }

    .ajouter-info-panel {
        background-color: var(--primary-transparent);
        border-radius: var(--border-radius);
        padding: 15px;
        margin-bottom: 20px;
        border-left: 4px solid var(--primary-color);
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .ajouter-info-panel i {
        color: var(--primary-color);
        font-size: 1.2rem;
    }

    .ajouter-info-panel p {
        color: var(--text-light);
        margin: 0;
    }

    .ajouter-retour {
        display: block;
        width: fit-content;
        margin: 20px auto 0;
        color: var(--text-muted);
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 8px;
        transition: var(--transition);
        font-size: 0.9rem;
    }

    .ajouter-retour:hover {
        color: var(--text-light);
        transform: translateX(-5px);
    }

    @media (max-width: 840px) {
        .ajouter-formulaire-ajout {
            width: 95%;
            flex-direction: column;
            gap: 20px;
        }
        
        .ajouter-progress-container {
            width: 95%;
        }
    }
</style>

<div class="ajouter-form-container">
    <h1 class="ajouter-title-primary">Modification d'un Professionnel</h1>
    <div class="ajouter-formulaire-ajout">
        <div class="ajouter-left-column">
            <div class="ajouter-info-panel">
                <i class="fas fa-info-circle"></i>
                <p>Remplissez le formulaire pour modifier un professionnel</p>
            </div>

            {{ form_start(form) }}

            <div class="ajouter-form-group">
                <label for="{{ form.nom.vars.id }}">
                    <i class="fas fa-user-tie"></i>
                    Nom
                </label>
                {{ form_widget(form.nom, {'attr': {'placeholder': 'Nom de l\'entreprise ou du professionnel'}}) }}
            </div>

            <div class="ajouter-form-group">
                <label for="{{ form.numRue.vars.id }}">
                    <i class="fas fa-map-marker-alt"></i>
                    Numéro de rue
                </label>
                {{ form_widget(form.numRue, {'attr': {'placeholder': 'Numéro de rue'}}) }}
            </div>

            <div class="ajouter-form-group">
                <label for="{{ form.rue.vars.id }}">
                    <i class="fas fa-road"></i>
                    Rue
                </label>
                {{ form_widget(form.rue, {'attr': {'placeholder': 'Nom de la rue'}}) }}
            </div>

            <div class="ajouter-form-group">
                <label for="{{ form.copos.vars.id }}">
                    <i class="fas fa-mail-bulk"></i>
                    Code postal
                </label>
                {{ form_widget(form.copos, {'attr': {'placeholder': 'Code postal'}}) }}
            </div>

            <div class="ajouter-form-group">
                <label for="{{ form.ville.vars.id }}">
                    <i class="fas fa-city"></i>
                    Ville
                </label>
                {{ form_widget(form.ville, {'attr': {'placeholder': 'Ville'}}) }}
            </div>

        </div>

        <div class="ajouter-right-column">
            <div class="ajouter-form-group">
                <label for="{{ form.tel.vars.id }}">
                    <i class="fas fa-phone"></i>
                    Téléphone
                </label>
                {{ form_widget(form.tel, {'attr': {'placeholder': 'Numéro de téléphone'}}) }}
            </div>

            <div class="ajouter-form-group">
                <label for="{{ form.mail.vars.id }}">
                    <i class="fas fa-envelope"></i>
                    Email
                </label>
                {{ form_widget(form.mail, {'attr': {'placeholder': 'Adresse email'}}) }}
            </div>

            <div class="ajouter-form-group">
                <label for="{{ form.metiers.vars.id }}">
                    <i class="fas fa-briefcase"></i>
                    Métiers
                </label>
                {{ form_widget(form.metiers) }}
            </div>

            <div class="ajouter-image-container">
                <img id="image-preview" src="{{ asset('placeholder-image.png') }}" alt="Prévisualisation">
            </div>

            <div class="ajouter-form-group">
                <label for="{{ form.cheminImage.vars.id }}">
                    <i class="fas fa-image"></i>
                    Image
                </label>
                {{ form_widget(form.cheminImage) }}
            </div>

            <div class="ajouter-form-group">
                {{ form_widget(form.enregistrer, {'attr': {'id': 'btn-enregistrer'}}) }}
            </div>
        </div>

        {{ form_end(form) }}
    </div>

    <div class="ajouter-progress-container">
        <div class="ajouter-progress-bar" id="progress-bar"></div>
    </div>

    <a href="{{ path('professionnel_lister') }}" class="ajouter-retour">
        <i class="fas fa-arrow-left"></i>
        Retour à la liste des professionnels
    </a>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const inputImage = document.querySelector('input[type="file"]');
        const previewImage = document.getElementById('image-preview');
        
        if (inputImage) {
            inputImage.addEventListener('change', function(e) {
                if (e.target.files && e.target.files[0]) {
                    const reader = new FileReader();
                    
                    reader.onload = function(event) {
                        previewImage.src = event.target.result;
                    }
                    
                    reader.readAsDataURL(e.target.files[0]);
                }
            });
        }
        
        const fields = document.querySelectorAll('.ajouter-form-group input, .ajouter-form-group select');
        const progressBar = document.getElementById('progress-bar');
        
        function updateProgress() {
            const filledFields = Array.from(fields).filter(field => {
                if (field.type === 'file' || field.type === 'submit') return true;
                return field.value.trim() !== '';
            });
            
            const progress = (filledFields.length / fields.length) * 100;
            progressBar.style.width = `${progress}%`;
        }
        
        updateProgress();
        
        fields.forEach(field => {
            field.addEventListener('input', updateProgress);
        });
        
        const btnEnregistrer = document.getElementById('btn-enregistrer');
        if (btnEnregistrer) {
            btnEnregistrer.innerHTML = '<i class="fas fa-save"></i> Enregistrer';
            
            btnEnregistrer.addEventListener('mouseenter', function() {
                this.innerHTML = '<i class="fas fa-check"></i> Valider';
            });
            
            btnEnregistrer.addEventListener('mouseleave', function() {
                this.innerHTML = '<i class="fas fa-save"></i> Enregistrer';
            });
        }
    });
</script>
{% endblock %}