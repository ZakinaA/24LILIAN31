{% extends 'base.html.twig' %}

{% block content %}
<style>
    a {
        text-decoration: none;
    }

    h1 {
        font-size: 40px;
    }

    .professionnel-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin-top: 40px;
        justify-content: space-between;
    }

    .professionnel-item {
        display: flex;
        width: calc(50% - 20px); /* 2 items per row */
        background-color: #313237;
        border-radius: 10px;
        overflow: hidden;
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease;
        margin-bottom: 20px;
        color: white;
        position: relative; /* To position the dropdown menu */
    }

    .professionnel-item:hover {
        transform: scale(1.05);
        box-shadow: 0 10px 15px rgba(0, 0, 0, 0.3);
    }

    .professionnel-photo {
        width: 120px;
        height: 120px;
        border-radius: 10px;
        background-size: cover;
        background-position: center;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
    }

    .professionnel-info {
        padding: 10px;
        flex-grow: 1;
    }

    .professionnel-info p {
        margin: 0;
        font-size: 1.2rem;
        margin-bottom: 5px;
    }

    .professionnel-info .metier {
        font-size: 1rem;
        color: #ccc;
    }

    .actions-btn {
        position: absolute;
        top: 10px;
        right: 10px;
        background-color: #181B22;
        color: white;
        padding: 5px 10px;
        border-radius: 5px;
        cursor: pointer;
    }

    .actions-dropdown {
        display: none;
        position: absolute;
        top: 30px;
        right: 10px;
        background-color: #313237;
        border-radius: 5px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
        padding: 5px 0;
        min-width: 150px;
        z-index: 100;
    }

    .actions-dropdown a {
        display: block;
        padding: 10px;
        color: white;
        text-decoration: none;
        font-size: 1rem;
    }

    .actions-dropdown a:hover {
        background-color: #313237;
    }

    .info-btn {
        display: inline-block;
        margin-top: 10px;
        text-decoration: none;
        font-size: 1rem;
        border-radius: 5px;
        text-align: center;
        padding: 5px 10px;
        transition: background-color 0.3s;
        background-color: green;
        color: white;
    }

    .info-btn:hover {
        background-color: #313237;
    }

    .delete-btn {
        background-color: #181B22;
        color: white;
    }

    .delete-btn:hover {
        background-color: #313237;
    }

    .modify-btn {
        background-color: #181B22;
        color: white;
    }

    .modify-btn:hover {
        background-color: #313237;
    }

    .popup {
        display: none;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: #181B22;
        padding: 20px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        z-index: 999;
    }

    .popup-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        z-index: 998;
    }

    .popup.open, .popup-overlay.open {
        display: block;
    }

    .tabs {
        margin-bottom: 10px;
    }

    .tab-button {
        padding: 10px;
        margin-right: 10px;
        cursor: pointer;
        background-color: #f1f1f1;
        border: 1px solid #ddd;
    }

    .tab-button.active {
        background-color: #181B22;
        color: white;
    }

    .tab-panel {
        display: none;
    }

    .tab-panel.active {
        display: block;
    }

    .btn-lister {
        background-color: #181B22;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        font-size: 1rem;
        transition: background-color 0.3s;
    }

    .btn-lister:hover {
        background-color: #313237;
    }
</style>

<h1>Liste des professionnels</h1>

<a href="{{ path('professionnel_ajouter') }}" class="btn-lister">Ajouter un professionnel</a>

<div class="professionnel-grid">
    {% for p in pProfessionnels %}
        <div class="professionnel-item">
            <div class="professionnel-photo" style="background-image: url('{{ asset('professionnel/' ~ p.cheminImage) }}');"></div>
            <div class="professionnel-info">
                <p>{{ p.nom }}</p>
                <p class="metier">{{ p.metiers|map(m => m.libelle)|join(', ') }}</p>

                <a href="#" class="info-btn" data-id="{{ p.id }}"
                   data-nom="{{ p.nom }} "
                   data-tel="{{ p.tel }}"
                   data-mail="{{ p.mail }}"
                   data-numRue="{{ p.numRue }}"
                   data-rue="{{ p.rue }}"
                   data-copos="{{ p.copos }}"
                   data-ville="{{ p.ville }}"
                   data-metiers="{{ p.metiers|map(m => m.libelle)|join(', ') }}">
                    + d'infos
                </a>
            </div>

            <!-- Actions Dropdown -->
            <div class="actions-btn">Actions</div>
            <div class="actions-dropdown">
                <a href="#" class="delete-btn" data-id="{{ p.id }}">
                    <i class="fas fa-trash-alt"></i> Supprimer
                </a>
                <a href="{{ path('professionnel_modifier', { 'id': p.id }) }}" class="modify-btn">
                    <i class="fas fa-edit"></i> Modifier
                </a>
                <a href="#" class="info-btn" data-id="{{ p.id }}"
                   data-nom="{{ p.nom }}"
                   data-tel="{{ p.tel }}"
                   data-mail="{{ p.mail }}"
                   data-numRue="{{ p.numRue }}"
                   data-rue="{{ p.rue }}"
                   data-copos="{{ p.copos }}"
                   data-ville="{{ p.ville }}"
                   data-metiers="{{ p.metiers|map(m => m.libelle)|join(', ') }}">
                    + d'infos
                </a>
            </div>
        </div>
    {% else %}
        <p>Aucun professionnel trouvé.</p>
    {% endfor %}
</div>

<!-- Popup Modal -->
<div class="popup-overlay"></div>
<div class="popup">
    <button class="close-btn">&times;</button>
    <h2>Détails du professionnel</h2>
    <div class="tabs">
        <button class="tab-button active" data-target="professionnel">Professionnel</button>
    </div>

    <div class="tab-content">
        <div class="tab-panel active" id="professionnel">
            <table>
                <tr><td>Nom :</td><td><span id="modal-nom"></span></td></tr>
                <tr><td>Téléphone :</td><td><span id="modal-tel"></span></td></tr>
                <tr><td>Email :</td><td><span id="modal-mail"></span></td></tr>
                <tr><td>Adresse :</td><td><span id="modal-adresse"></span></td></tr>
                <tr><td>Métiers :</td><td><span id="modal-metiers"></span></td></tr> <!-- Ajouter la ligne métiers -->
            </table>
        </div>
    </div>
</div>

<script>
    // Ouvrir la popup et charger les données du professionnel
    document.querySelectorAll('.info-btn').forEach(button => {
        button.addEventListener('click', function(event) {
            event.preventDefault();

            // Récupérer les informations et les afficher dans le modal
            document.getElementById('modal-nom').textContent = this.dataset.nom;
            document.getElementById('modal-tel').textContent = this.dataset.tel;
            document.getElementById('modal-mail').textContent = this.dataset.mail;
            document.getElementById('modal-adresse').textContent = this.dataset.numRue + ' ' + this.dataset.rue + ', ' + this.dataset.copos + ' ' + this.dataset.ville;

            // Afficher les métiers dans la popup
            document.getElementById('modal-metiers').textContent = this.dataset.metiers;

            document.querySelector('.popup').classList.add('open');
            document.querySelector('.popup-overlay').classList.add('open');
        });
    });

    document.querySelector('.close-btn').addEventListener('click', function() {
        document.querySelector('.popup').classList.remove('open');
        document.querySelector('.popup-overlay').classList.remove('open');
    });

    document.querySelector('.popup-overlay').addEventListener('click', function() {
        document.querySelector('.popup').classList.remove('open');
        document.querySelector('.popup-overlay').classList.remove('open');
    });

    // Gérer le menu déroulant des actions
    document.querySelectorAll('.actions-btn').forEach(button => {
        button.addEventListener('click', function() {
            const dropdown = this.nextElementSibling;
            dropdown.style.display = dropdown.style.display === 'block' ? 'none' : 'block';
        });
    });

    // Fermer le menu déroulant si on clique ailleurs
    document.addEventListener('click', function(event) {
        if (!event.target.closest('.professionnel-item')) {
            document.querySelectorAll('.actions-dropdown').forEach(dropdown => {
                dropdown.style.display = 'none';
            });
        }
    });
</script>

{% endblock %}
