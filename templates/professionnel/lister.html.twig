{% extends 'base.html.twig' %}

{% block content %}
<style>
    a {
        text-decoration: none;
    }

    h1 {
        font-size: 40px;
    }

    .professionnel-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 40px;
        margin-top: 40px;
    }

    .professionnel-item {
        text-align: center;
        color: white;
        width: 200px;
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease;
        margin-bottom: 40px;
    }

    .professionnel-item:hover {
        transform: scale(1.05);
        box-shadow: 0 10px 15px rgba(0, 0, 0, 0.3);
        background-color: #313237;
        border-radius: 10px;
    }

    .professionnel-photo {
        width: 120px;
        height: 120px;
        margin: 0 auto;
        border-radius: 50%;
        background-size: cover;
        background-position: center;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
    }

    .professionnel-item p {
        margin-top: 15px;
        font-size: 1.2rem;
    }

    .info-btn {
        display: block;
        margin-top: 10px;
        text-decoration: none;
        color: #fff;
        font-size: 1rem;
        background-color: green;
        padding: 5px 10px;
        border-radius: 5px;
        text-align: center;
    }

    .info-btn:hover {
        background-color: #313237;
    }

    /* New delete button styles */
    .delete-btn {
        display: block;
        margin-top: 10px;
        text-decoration: none;
        color: #fff;
        font-size: 1.2rem;
        background-color: red;
        padding: 5px 10px;
        border-radius: 5px;
        text-align: center;
    }

    .delete-btn:hover {
        background-color: #b23131;
    }

    .delete-btn i {
        margin-right: 5px;
    }

    /* New modify button styles */
    .modify-btn {
        display: block;
        margin-top: 10px;
        text-decoration: none;
        color: #fff;
        font-size: 1.2rem;
        background-color: #007bff;
        padding: 5px 10px;
        border-radius: 5px;
        text-align: center;
    }

    .modify-btn:hover {
        background-color: #0056b3;
    }

    /* Popup Styles */
    .popup {
        display: none;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: #181B22;
        padding: 20px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        z-index: 999;
    }

    .popup-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        z-index: 998;
    }

    .popup.open, .popup-overlay.open {
        display: block;
    }

    /* Tab Styles */
    .tabs {
        margin-bottom: 10px;
    }

    .tab-button {
        padding: 10px;
        margin-right: 10px;
        cursor: pointer;
        background-color: #f1f1f1;
        border: 1px solid #ddd;
    }

    .tab-button.active {
        background-color: #181B22;
        color: white;
    }

    .tab-panel {
        display: none;
    }

    .tab-panel.active {
        display: block;
    }
</style>

<h1>Liste des professionnels</h1>

<div class="professionnel-grid">
    {% for p in pProfessionnels %}
        <div class="professionnel-item">
            <a href="{{ path('professionnel_consulter', { 'id': p.id }) }}">
                <div class="professionnel-photo" style="background-image: url('{{ asset('professionnel/' ~ p.cheminImage) }}');"></div>
            </a>
            <p>{{ p.nom }}</p>
            <a href="#" class="info-btn" data-id="{{ p.id }}"
               data-nom="{{ p.nom }}"
               data-tel="{{ p.tel }}"
               data-mail="{{ p.mail }}"
               data-numRue="{{ p.numRue }}"
               data-rue="{{ p.rue }}"
               data-copos="{{ p.copos }}"
               data-ville="{{ p.ville }}"
               data-metiers="{{ p.metiers|map(m => m.libelle)|join(', ') }}">
                + d'infos
            </a>
            
            <!-- New Delete Button -->
            <a href="#" class="delete-btn" data-id="{{ p.id }}">
                <i class="fas fa-trash-alt"></i> Supprimer
            </a>

            <!-- New Modify Button -->
            <a href="{{ path('professionnel_modifier', { 'id': p.id }) }}" class="modify-btn">
                <i class="fas fa-edit"></i> Modifier
            </a>
        </div>
    {% else %}
        <p>Aucun professionnel trouvé.</p>
    {% endfor %}
</div>

<!-- Popup Modal -->
<div class="popup-overlay"></div>
<div class="popup">
    <button class="close-btn">&times;</button>
    <h2>Détails du professionnel</h2>
    <div class="tabs">
        <button class="tab-button active" data-target="professionnel">Professionnel</button>
    </div>

    <div class="tab-content">
        <div class="tab-panel active" id="professionnel">
            <table>
                <tr><td>Nom :</td><td><span id="modal-nom"></span></td></tr>
                <tr><td>Téléphone :</td><td><span id="modal-tel"></span></td></tr>
                <tr><td>Email :</td><td><span id="modal-mail"></span></td></tr>
                <tr><td>Adresse :</td><td><span id="modal-adresse"></span></td></tr>
                <tr><td>Métiers :</td><td><span id="modal-metiers"></span></td></tr> <!-- Ajouter la ligne métiers -->
            </table>
        </div>
    </div>
</div>

<script>
    // Ouvrir la popup et charger les données du professionnel
    document.querySelectorAll('.info-btn').forEach(button => {
        button.addEventListener('click', function(event) {
            event.preventDefault();

            // Récupérer les informations et les afficher dans le modal
            document.getElementById('modal-nom').textContent = this.dataset.nom;
            document.getElementById('modal-tel').textContent = this.dataset.tel;
            document.getElementById('modal-mail').textContent = this.dataset.mail;
            document.getElementById('modal-adresse').textContent = this.dataset.numRue + ' ' + this.dataset.rue + ', ' + this.dataset.copos + ' ' + this.dataset.ville;

            // Afficher les métiers dans la popup
            document.getElementById('modal-metiers').textContent = this.dataset.metiers;

            document.querySelector('.popup').classList.add('open');
            document.querySelector('.popup-overlay').classList.add('open');
        });
    });

    document.querySelector('.close-btn').addEventListener('click', function() {
        document.querySelector('.popup').classList.remove('open');
        document.querySelector('.popup-overlay').classList.remove('open');
    });

    document.querySelector('.popup-overlay').addEventListener('click', function() {
        document.querySelector('.popup').classList.remove('open');
        document.querySelector('.popup-overlay').classList.remove('open');
    });

    // Confirmation de suppression
    document.querySelectorAll('.delete-btn').forEach(button => {
        button.addEventListener('click', function(event) {
            event.preventDefault();

            const professionnelId = this.dataset.id;
            const confirmation = confirm('Êtes-vous sûr de vouloir supprimer ce professionnel ?');
            
            if (confirmation) {
                window.location.href = `http://172.20.177.77/lilian31/public/professionnel/supprimer/${professionnelId}`;
            }
        });
    });

</script>
{% endblock %}
