{% extends 'base.html.twig' %}

{% block title %}Accessoire {{ accessoire.libelle }} - Emusic{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .conteneurPage {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem;
        }
        
        .enTetePage {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }
        
        .titrePage {
            font-size: 1.8rem;
            font-weight: 600;
            color: var(--text-light);
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.8rem;
        }
        
        .titrePage i {
            color: var(--primary-color);
        }
        
        .actionsTitre {
            display: flex;
            gap: 1rem;
        }
        
        .btnAction {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.7rem 1.2rem;
            border-radius: var(--border-radius);
            transition: var(--transition);
            font-weight: 500;
            text-decoration: none;
        }
        
        .btnRetour {
            background-color: transparent;
            color: var(--text-light);
            border: 1px solid var(--border-light);
        }
        
        .btnRetour:hover {
            background-color: var(--card-hover);
            transform: translateY(-2px);
        }
        
        .grilleAccessoire {
            display: grid;
            grid-template-columns: 1fr 2fr;
            gap: 2rem;
        }
        
        .colonneGauche {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }
        
        .conteneurImage {
            background-color: var(--card-bg);
            border-radius: var(--border-radius-lg);
            overflow: hidden;
            box-shadow: var(--shadow-sm);
            border: 1px solid var(--border-light);
            position: relative;
        }
        
        .imageAccessoire {
            width: 100%;
            height: 350px;
            object-fit: cover;
            display: block;
            transition: var(--transition);
        }
        
        .imageAccessoire:hover {
            transform: scale(1.03);
        }
        
        .badgeType {
            position: absolute;
            top: 1rem;
            right: 1rem;
            background-color: var(--primary-color);
            color: white;
            padding: 0.4rem 0.8rem;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
            box-shadow: var(--shadow-sm);
        }
        
        .colonneDroite {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }
        
        .carteInfos {
            background-color: var(--card-bg);
            border-radius: var(--border-radius-lg);
            overflow: hidden;
            box-shadow: var(--shadow-sm);
            border: 1px solid var(--border-light);
        }
        
        .enTeteCarte {
            padding: 1.2rem 1.5rem;
            background-color: var(--sidebar-bg);
            border-bottom: 1px solid var(--border-light);
        }
        
        .titreCarte {
            font-size: 1.2rem;
            font-weight: 600;
            color: var(--text-light);
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .titreCarte i {
            color: var(--primary-color);
        }
        
        .corpsCarte {
            padding: 1.5rem;
        }
        
        .listeInfos {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 1.2rem;
        }
        
        .infoItem {
            background-color: var(--sidebar-bg);
            padding: 1rem;
            border-radius: var(--border-radius);
            transition: var(--transition);
            border: 1px solid var(--border-light);
        }
        
        .infoItem:hover {
            transform: translateY(-3px);
            box-shadow: var(--shadow-sm);
            background-color: var(--card-hover);
        }
        
        .infoLabel {
            color: var(--primary-color);
            font-weight: 600;
            font-size: 0.85rem;
            margin-bottom: 0.3rem;
        }
        
        .infoValeur {
            color: var(--text-light);
            font-size: 1rem;
        }
        
        @media (max-width: 992px) {
            .grilleAccessoire {
                grid-template-columns: 1fr;
            }
            
            .conteneurImage {
                max-width: 500px;
                margin: 0 auto;
            }
        }
        
        @media (max-width: 768px) {
            .enTetePage {
                flex-direction: column;
                align-items: flex-start;
                gap: 1rem;
            }
            
            .actionsTitre {
                width: 100%;
                justify-content: space-between;
            }
            
            .listeInfos {
                grid-template-columns: 1fr;
            }
            
            .conteneurPage {
                padding: 1rem;
            }
        }
    </style>
{% endblock %}

{% block content %}
    <div class="conteneurPage">
        <div class="enTetePage">
            <h1 class="titrePage">
                <i class="fas fa-puzzle-piece"></i>
                Accessoire {{ accessoire.libelle }}
            </h1>
            
            <div class="actionsTitre">
                <a href="{{ path('accessoireLister') }}" class="btnAction btnRetour">
                    <i class="fas fa-arrow-left"></i>
                    Retour à la liste
                </a>
                
                <a href="{{ path('accessoireModifier', {'id': accessoire.id}) }}" class="btnAction btnModifier">
                    <i class="fas fa-edit"></i>
                    Modifier
                </a>
            </div>
        </div>
        
        <div class="grilleAccessoire">
            <div class="colonneGauche">
                <div class="conteneurImage">
                    <img src="{{ asset('accessoire/' ~ accessoire.cheminImage) }}" alt="{{ accessoire.libelle }}" class="imageAccessoire">
                </div>
            </div>
            
            <div class="colonneDroite">
                <div class="carteInfos">
                    <div class="enTeteCarte">
                        <h2 class="titreCarte">
                            <i class="fas fa-info-circle"></i>
                            Informations de l'accessoire
                        </h2>
                    </div>
                    
                    <div class="corpsCarte">
                        <div class="listeInfos">
                            <div class="infoItem">
                                <div class="infoLabel">Libellé</div>
                                <div class="infoValeur">{{ accessoire.libelle }}</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}